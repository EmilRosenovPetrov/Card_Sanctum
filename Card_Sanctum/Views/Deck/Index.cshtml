@using Card_Sanctum.Core.Models

@{
}

@model IEnumerable<CreateDeckViewModel>

<div class="content" style="max-width: 800px; background-color: white">
    <div class="deck-header">
        <h1 class="deck-title">All your decks:</h1>
    </div>

    <div class="decks-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>

                    <th>Name</th>
                    <th>Description</th>


                </tr>
            </thead>
            @foreach (var deck in Model)
            {
                @using (Html.BeginForm("Edit", "Deck", FormMethod.Post))
                {
                    @Html.Hidden("id", deck.Id);
                    <tbody>
                        <tr>
                        <td>@deck.Name</td>
                        <td>@deck.Description</td>                     
                        <td>
                            <button id="Index" method="post" class="btn btn-primary">Edit</button>                        
                        </td>
                    </tr>
                </tbody>
                }
            }

        </table>
    </div>

</div>
