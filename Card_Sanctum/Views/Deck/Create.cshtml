@using Card_Sanctum.Core.Models
@model CreateDeckViewModel


@{
}

<div class="row">
    <div class="col-4">
        <form id="create" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" aria-required="true" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>         
            <div class="row">               
                <!-- /.col -->
                <div class="col-4">
                    <button id="login-submit" type="submit" class="btn btn-primary btn-block" style="margin-top: 10px;">Create</button>
                </div>
                <!-- /.col -->
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}


