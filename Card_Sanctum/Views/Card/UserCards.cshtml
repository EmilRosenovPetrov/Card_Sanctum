@using Card_Sanctum.Core.Models
@model CardPagingViewModel

<paging page-no="@Model.PageNumber"
        page-size="@Model.PageSize"
        total-records="@Model.TotalRecords"
        page-size-dropdown-items="5-10-20">
</paging>

<div class="card">
    <div class="card-header">
        <h1 class="card-title">All your cards:</h1>
    </div>

    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>

                    <th>Name</th>
                    <th>Type</th>
                    <th>Rarety</th>
                    <th>Color</th>
                    <th>Price</th>
                    <th>Quantity</th>

                </tr>
            </thead>
            @foreach (var card in Model.Cards)
            {
                @using (Html.BeginForm("AddToDeck", "Card", FormMethod.Post))
                {
                    @Html.Hidden("id", card.Id)
                    ;
                    <tbody>
                        <tr>
                            <td>@card.Name</td>
                            <td>@card.CardType</td>
                            <td>@card.Rarety</td>
                            <td>@card.Color</td>
                            <td>@card.Price</td>
                            <td>@card.Quantity</td>
                            <td>
                                <button id="id" method="post" class="btn btn-primary">Add to deck</button>
                            </td>
                        </tr>
                    </tbody>
                }
            }

        </table>
    </div>

</div>