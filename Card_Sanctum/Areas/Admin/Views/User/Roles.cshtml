@using Card_Sanctum.Core.Models
@model UserRolesViewModel
@{
    ViewData["TItle"] = "User Roles";
    var items = (List<SelectListItem>)ViewBag.RoleItems;
}

<div class="row">
    <div class="col-4">
        <form id="roles" method="post">
            <input type="hidden" name="Id" value="@Model.UserId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
              <h3>User: @Html.DisplayFor(m => m.Name)</h3>  
            </div>
            <div class="form-floating">
                <div class="form-group">
                    <label>UserRoles</label>
                    <select asp-for = "RoleNames" asp-items="@items" multiple="" class="form-control">
                                  
                    </select>
                </div>
            </div>
            <div class="row">
                <!-- /.col -->
                <div class="col-4">
                    <button id="login-submit" type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>
                <!-- /.col -->
            </div>
        </form>
    </div>
</div>