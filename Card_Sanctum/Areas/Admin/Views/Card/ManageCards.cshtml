@using Card_Sanctum.Core.Models
@model IEnumerable<CardListViewModel>
@{
     ViewData["Title"] = "Manage cards";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Cards administration panel</h3>
                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Card</th>
                            <th>Type</th>                            
                            <th>Action</th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var card in Model)
                        {
                            <tr>
                            <td>@card.Name</td>
                            <td>@card.Type</td>
                            <td>
                                <a asp-area = "admin" asp-action = "edit" asp-controller = "card" asp-route-id=@card.Id class="btn btn-block btn-outline-dark btn-sm">Edit</a>

                               @* <a asp-area = "admin" asp-action = "roles" asp-controller = "user" asp-route-id=@user.Id class="btn btn-block btn-outline-danger btn-sm">Set role</a>*@
                            </td>                  
                        </tr>
                        }
                        
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>